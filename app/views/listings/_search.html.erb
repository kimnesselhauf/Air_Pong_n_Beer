<span class="center-search-bar text-center">
  <%= form_tag listings_path, method: :get do %>
    <%= date_field_tag :pickup_on, '', as: :date, html5: true, class: "datepicker datepicker-search", placeholder: "Select Pickup Date"%>
    <%= date_field_tag :return_on, '', as: :date, html5: true, class: "datepicker datepicker-search", placeholder: "Select Return Date"%>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</span>
