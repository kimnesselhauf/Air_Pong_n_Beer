<%= form_tag listings_path, method: :get do %>
   <%= date_field_tag :pickup_on, '', as: :date, html5: true, class: "datepicker datepicker-search" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="bg-light py-5">
  <h1 class="listing-title">Tables</h1>
  <div class="card-container">
    <% @listings.each do |listing| %>
      <div class="card-trip">
        <img src="<%= listing.photo %>" alt="#">
        <div class="card-trip-infos">
          <div>
            <h2><%= link_to listing.title, listing %></h2>
            <p><%= listing.description %></p>
          </div>
          <h2 class="card-trip-pricing">$<%= listing.price %>/Day.</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>

