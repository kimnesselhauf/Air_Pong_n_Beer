<h1>Profile page</h1>

  <%= cl_image_tag current_user.photo_or_default %>

    <% if @user.first_name.nil? %>
      <% %>
    <% else %>
      <p><%= @user.first_name %></p>
    <% end %>

    <% if @user.last_name.nil? %>
      <% %>
    <% else %>
      <p><%= @user.last_name %></p>
    <% end %>

<br>

  <p><%= @user.email %></p>

  <% if @user.bio.nil? %>
    <% %>
  <% else %>
    <p><%= @user.bio %></p>
  <% end %>

<br>
   <h2>My bookings</h2> <%= link_to 'Book now', listings_path %>
   <br>

    <% if @user.bookings.empty? %>
      <p>You have no current bookings open </p>
    <% else %>
      <% @user.bookings.each do |booking| %>
        <%= "Table name:" %><%= booking.listing.title %>
          <br>
            <%= "Pick date: " %><%= booking.pickup_on %>
          <br>
            <%= "Return date: " %> <%= booking.return_on %>
          <br>
            <%= "Pickup address: " %>
          <br>
            <%= "Vendor: " %>
            <%= booking.listing.user.first_name %>
            <%= booking.listing.user.last_name %>
          <br>
            <%= "Email: " %>
            <%= booking.listing.user.email %>
        <br>
            <%= link_to "Booking confirmation", listing_path %>
      <% end %>
    <% end %>
<br>
   <h2>My listings</h2><%= link_to 'create new listing', new_listing_path %>

     <% if @user.listings.empty? %>
        <p>You have no current listing </p>
      <% else %>
        <% @user.listings.each do |listing| %>
          <div class="card-product-container pt-5">
            <div class="card-product">
              <img src="<%= listing.photo %>" alt="#">
              <div class="card-product-infos">
                <h1><%= listing.title %></h1>
                <h4><%= listing.description %></h4>
                <p>$<%= listing.price %></p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
<br>
<%= link_to 'Update profile', edit_user_path %>
<br>
<%= link_to 'back', root_path %>




